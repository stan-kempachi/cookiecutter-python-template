repos:
  {% if cookiecutter.use_black == "yes" %}
  - repo: https://github.com/psf/black
    rev: 24.3.0
    hooks:
      - id: black
  {% endif %}
  {% if cookiecutter.use_ruff == "yes" %}
  - repo: https://github.com/charliermarsh/ruff-pre-commit
    rev: v0.4.1
    hooks:
      - id: ruff
  {% endif %}
  {% if cookiecutter.use_black == "yes" %}
  - repo: https://github.com/pre-commit/mirrors-isort
    rev: v5.12.0
    hooks:
      - id: isort
  {% endif %}